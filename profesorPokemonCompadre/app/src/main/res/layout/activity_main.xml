<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokemon"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/descubiertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POKEMON ENCONTRADOS : 7"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#4DFFFFFF"/>

    <FrameLayout
        android:id="@+id/framel"
        android:layout_width="350dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <Button
        android:id="@+id/boton7"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginTop="104dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton4"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginEnd="324dp"
        android:layout_marginBottom="116dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="88dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="164dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginLeft="276dp"
        android:layout_marginBottom="116dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/boton5"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="96dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/boton6"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="192dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@android:drawable/ic_dialog_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff"
        android:onClick="ayuda"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUNTUACION : 0"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#66FFFFFF"
        android:id="@+id/puntuacion"/>

    <!--@android:color/transparent-->


</androidx.constraintlayout.widget.ConstraintLayout>