<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokemon"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/descubiertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POKEMON ENCONTRADOS :"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#4DFFFFFF"/>
    <FrameLayout
        android:id="@+id/framel"
        android:layout_width="350dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/boton1"
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="200dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="632dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="43dp"
        android:layout_height="48dp"
        android:layout_marginLeft="432dp"
        android:layout_marginTop="512dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton5"
        android:layout_width="40dp"
        android:layout_height="43dp"
        android:layout_marginLeft="724dp"
        android:layout_marginTop="504dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton6"
        android:layout_width="43dp"
        android:layout_height="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="400dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton7"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginTop="312dp"
        android:background="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton4"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_marginLeft="1140dp"
        android:layout_marginTop="548dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@android:drawable/ic_dialog_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff"
        android:onClick="ayuda"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUNTUACION :"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#66FFFFFF"
        android:id="@+id/puntuacion"/>

    <!--@android:color/transparent-->


</androidx.constraintlayout.widget.ConstraintLayout>