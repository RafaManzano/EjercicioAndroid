<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:rowCount="3"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <!--- Los tres de arriba -->
        <ImageButton
            android:id="@+id/uno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="8"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="uno"/>

        <ImageButton
            android:id="@+id/dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="1"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="dos"/>

        <ImageButton
            android:id="@+id/tres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="12"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="tres"/>


        <!---Los tres del medio -->
        <ImageButton
            android:id="@+id/cuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="8"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="cuatro"/>

        <ImageButton
            android:id="@+id/cinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:text="1"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="cinco"/>

        <ImageButton
            android:id="@+id/seis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:text="12"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="seis"/>

        <!--- Los tres de abajo-->
        <ImageButton
            android:id="@+id/siete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="8"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="siete"/>

        <ImageButton
            android:id="@+id/ocho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:text="1"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="ocho"/>

        <ImageButton
            android:id="@+id/nueve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:text="12"
            android:background="@drawable/ind"
            android:clickable="true"
            android:onClick="nueve"/>

    </GridLayout>

    <TextView
        android:id="@+id/ganador"
        android:layout_width="313dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="117dp"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/turno"
        android:layout_width="276dp"
        android:layout_height="136dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="37dp"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="631dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="34dp"
        android:visibility="invisible"
        android:onClick="volverJugar"
        android:text="Volver a Jugar" />


</RelativeLayout>