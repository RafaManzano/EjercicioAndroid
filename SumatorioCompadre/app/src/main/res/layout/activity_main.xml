<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/contadorizq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonizq"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/contadorizq"
        android:text="+"
        android:onClick="sumaizq"/>

    <Button
        android:id="@+id/restarizq"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/botonizq"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/contadorizq"
        android:text="-"
        android:layout_marginLeft="3dp"
        android:onClick="restarizq"/>

    <TextView
        android:id="@+id/contadordcha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:textColor="#000"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botondcha"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/contadordcha"
        android:text="+"
        android:onClick="sumadcha"/>

    <Button
        android:id="@+id/restardcha"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/botondcha"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toBottomOf="@id/contadordcha"
        android:text="-"
        android:onClick="restardcha"/>

    <Button
        android:id="@+id/igual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/botondcha"
        app:layout_constraintTop_toBottomOf="@id/contadordcha"
        android:text="="
        android:onClick="sumarlista"/>

    <ListView
        android:id="@+id/lista"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/igual"
        android:layout_marginTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>