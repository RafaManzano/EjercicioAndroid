<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreIns"
        android:text="Nombre: "
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edNombre"
        app:layout_constraintLeft_toRightOf="@id/nombreIns"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:textSize="30sp"
        android:text="Apellido: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apellidosIns"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreIns"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edApellidos"
        app:layout_constraintLeft_toRightOf="@id/apellidosIns"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/apellidosIns"/>

    <TextView
        android:textSize="30sp"
        android:text="Observaciones: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/obsIns"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apellidosIns"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/edObs"
        app:layout_constraintLeft_toRightOf="@id/obsIns"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/obsIns"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@id/aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18sp"
        android:text="Limpiar"
        android:id="@+id/limpiar"/>

    <Button
        android:id="@+id/aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/limpiar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Aceptar"
        android:textSize="18sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>